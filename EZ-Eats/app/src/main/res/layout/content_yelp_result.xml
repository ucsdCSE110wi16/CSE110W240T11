<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_weight="3"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Is this what you are looking for?"
        android:background="@drawable/background_new_flip"
        android:id="@+id/result_title"
        android:gravity="center_vertical|center"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="35dp" />

    <!--<ListView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:id="@+id/result_list"-->
        <!--android:layout_weight="5" />-->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:focusable="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/starbackground_002_edited"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/result_list"
            android:drawSelectorOnTop="false"
            android:divider="#ebdd46"
            android:dividerHeight="6px"
            android:layout_gravity="right|top" />

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center_horizontal"
        android:background="#5076c2"
        android:text="BACK"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:id="@+id/home" />
</LinearLayout>
